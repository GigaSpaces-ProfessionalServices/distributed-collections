<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.1.xsd">

    <bean id="propertiesConfigurer" class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
        <property name="propertiesArray">
            <map>
                <entry key="queue.name" value="TestEmbeddedGigaBlockingQueue"/>
            </map>
        </property>
    </bean>

    <import resource="classpath:/partitioned-space-test-config.xml"/>

    <bean id="gigaQueue" class="org.openspaces.collections.GigaQueueFactoryBean">
        <property name="gigaSpace" ref="gigaSpace"/>
        <property name="queueName" value="${queue.name}"/>
        <property name="collocationMode" value="EMBEDDED"/>
    </bean>
</beans>